---
import { Image } from "astro:assets";
import MainLayout from "src/layouts/MainLayout.astro";

import post05Img from "@images/post-05.png";
import Picture from "astro/components/Picture.astro";
---


<MainLayout title="Imagenes">
    <h1 class="text-5xl text-white">Imagenes</h1>
    <img src="/assets/images/post-05.png" width="250" height="250"/>

    <Image src={post05Img} width="250" height="250" alt="Imagen del post"/>
    <h1 class="text-white">Quality LOW</h1>
    <Image src={post05Img} width="250" height="250" alt="Imagen del post" quality="low"/>
    <h1 class="text-white">Formatos</h1>
    <Image src={post05Img} width="250" height="250" alt="Imagen del post" format="jpeg"/>
    <h1 class="text-white">PICTURE</h1>
    <Picture src={post05Img} width="250" height="250" alt="Imagen del post" formats={['jpeg', 'webp']} 
    widths={[240, 540, 720, post05Img.width]}
    sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`}
    />
    <div style={{
    height: '3000px'}}></div>
    <img loading="lazy" src="/assets/images/post-05.png" width="250" height="250"/>

</MainLayout>
